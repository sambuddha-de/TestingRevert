<table border="1" width="100%">
  <tr>
    <td width="15%">
      <h2>New Team</h2>
    </td>
    <td width="85%" align="right">
    </td>
  </tr>
  <tr>
    <td width="15%"><%= render :partial => '/adminlinks' %></td>
    <td width="85%">

        <%= form_for :team, url:team_create_path  do |f| %>

            <p>Name</p>
            <p style="width: 30%;"><%= f.text_field :name %></p>

            <p>Members</p>
            <p><%= f.text_area :members %></p>

            <p>Description</p>
            <p><%= f.text_area :description %></p>

            <p>Summary</p>
            <p><%= f.text_area :summary %></p>

            <p>Location</p>
            <p><%= f.collection_select :location, Location.all, :name, :name %></p>

            <%= f.submit %>

        <% end %>

        <%= link_to 'Back', {:action => 'list'} %>

    </td>
  </tr>
</table>