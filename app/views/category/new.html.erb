<table border="1" width="100%">
  <tr>
    <td width="15%">
      <h2>New Category</h2>
    </td>
    <td width="85%" align="right">
      <% if !flash[:message].nil? || !flash[:message].blank? %>
          <%= flash[:message] %>
          <% flash[:message] = '' %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td width="15%"><%= render :partial => '/adminlinks' %></td>
    <td width="85%">

        <%= form_for :category, url:category_create_path  do |f| %>

            <p>Name</p>
            <p style="width: 30%;"><%= f.text_field :name %></p>

            <%= f.submit %>

        <% end %>

        <%= link_to 'Back', {:action => 'list'} %>

    </td>
  </tr>
</table>