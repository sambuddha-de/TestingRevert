<table border="1" width="100%" style="color:#000 !important;">
  <tr>
    <td width="15%">
      <h2>Location List</h2>
    </td>
    <td width="85%" align="right">
      <% if !flash[:message].nil? || !flash[:message].blank? %>
          <%= flash[:message] %>
          <% flash[:message] = '' %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td width="15%" valign="top"><%= render :partial => '/adminlinks' %></td>
    <td width="85%" style="padding-left: 20px;">
      <% if @locations.blank? %>
          <p>There are no location(s) currently in the system.</p>
      <% else %>
          <p>These are the current locations in our system.</p>
          <table border="1" cellpadding="5" cellspacing="0">
            <% @locations.each do |c| %>
                <tr>
                  <td><%= c.name %></td>
                  <td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
                  <td><%= link_to 'Delete', {:action => 'destroy', :id => c.id}, :confirm => 'Are you sure you want to delete this item?' %></td>
                </tr>
            <% end %>
          </table>
          <br/>
          <p>Update location order: </p>
          <table border="1">
            <ul id="sortable" style="width: 20%;">
              <% @locations.each do |c| %>
                  <li id="<%= c.name %>" class="ui-state-default"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span><%= c.name %></li>
              <% end %>
            </ul>
          </table>
      <% end %>
      <p class="prepare_team"><%= link_to 'Prepare new location', {:action => 'new' } %></p>
    </td>
  </tr>
</table>
