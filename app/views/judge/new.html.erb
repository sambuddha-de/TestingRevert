<table border="1" width="100%">
  <tr>
    <td width="15%">
      <h2>New Judge</h2>
    </td>
    <td width="85%" align="right">
    </td>
  </tr>
  <tr>
    <td width="15%"><%= render :partial => '/adminlinks' %></td>
    <td width="85%">

        <%= form_for :judge, url:judge_create_path  do |f| %>

            <p>Name</p>
            <p style="width: 30%;"><%= f.text_field :name %></p>

            <p>Password</p>
            <p style="width: 30%;"><%= f.password_field :password %></p>

            <%= f.submit %>

        <% end %>

        <%= link_to 'Back', {:action => 'list'} %>

    </td>
  </tr>
</table>